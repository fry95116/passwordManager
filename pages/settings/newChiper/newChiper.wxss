canvas{
  margin: 40rpx auto;
  width: 600rpx;
  height: 600rpx;
}

.warning{
  margin: 2em;
  margin-top: 0;
  color: #f00;
}

@keyframes ball-grid-pulse {
  0% {
    transform: scale(1); 
  }

  50% {
    transform: scale(0.5);
    opacity: 0.7; 
  }

  100% {
    transform: scale(1);
    opacity: 1; 
  } 
}

.ball-grid-pulse {
  width: 240rpx; 
  height: 240rpx;
  margin: 120rpx auto 0;
}
  .ball-grid-pulse > .circle {
    background-color: #444;
    width: 64rpx;
    height: 64rpx;
    border-radius: 100%;
    margin: 9rpx;
    display: inline-block;
    float: left;
    animation-name: ball-grid-pulse;
    animation-fill-mode: both;
    animation-iteration-count: infinite;
    animation-delay: 0; 
  }
  .subTitle {
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    margin: 64rpx auto;
  }

  .ball-grid-pulse > view:nth-child(1) {
    animation-delay: -0.06s;
    animation-duration: 0.72s; 
  }
  .ball-grid-pulse > view:nth-child(2) {
    animation-delay: 0.25s;
    animation-duration: 1.02s;
  }
  .ball-grid-pulse > view:nth-child(3) {
    animation-delay: -0.17s;
    animation-duration: 1.28s; 
  }
  .ball-grid-pulse > view:nth-child(4) {
    animation-delay: 0.48s;
    animation-duration: 1.42s; 
  }
  .ball-grid-pulse > view:nth-child(5) {
    animation-delay: 0.31s;
    animation-duration: 1.45s; 
  }
  .ball-grid-pulse > view:nth-child(6) {
    animation-delay: 0.03s;
    animation-duration: 1.18s; 
  }
  .ball-grid-pulse > view:nth-child(7) {
    animation-delay: 0.46s;
    animation-duration: 0.87s; 
  }
  .ball-grid-pulse > view:nth-child(8) {
    animation-delay: 0.78s;
    animation-duration: 1.45s; 
  }
  .ball-grid-pulse > view:nth-child(9) {
    animation-delay: 0.45s;
    animation-duration: 1.06s; 
  }

